DROP TABLE IF EXISTS utilisateurs ; CREATE TABLE utilisateurs (idUtilisateur INT AUTO_INCREMENT NOT NULL, nomUtilisateur VARCHAR(50), mdpUtilisateur VARCHAR(50), emailUtilisateur VARCHAR(50),	statutUtilisateur INT, dateInscriptionUtilisateur DATETIME, validationTokenUtilisateur VARCHAR(50), PRIMARY KEY (idUtilisateur)) ENGINE=InnoDB;  DROP TABLE IF EXISTS article ; CREATE TABLE article (idArticle INT AUTO_INCREMENT NOT NULL, titreArticle VARCHAR(50), contenuArticle TEXT, categorieArticle VARCHAR(50), dateArticle DATETIME, statutArticle INT, FK_idUtilisateur INT, FK_idCommentaire INT, FK_idCategorie INT, PRIMARY KEY (idArticle)) ENGINE=InnoDB;  DROP TABLE IF EXISTS commentaire ; CREATE TABLE commentaire (idCommentaire INT AUTO_INCREMENT NOT NULL, contenuCommentaire TEXT, dateCommentaire DATETIME, FK_idArticle INT, FK_idUtilisateur INT, FK_idCategorie INT, PRIMARY KEY (idCommentaire)) ENGINE=InnoDB;  DROP TABLE IF EXISTS categorie ; CREATE TABLE categorie (idCategorie INT AUTO_INCREMENT NOT NULL, nomCategorie INT, PRIMARY KEY (idCategorie)) ENGINE=InnoDB;
